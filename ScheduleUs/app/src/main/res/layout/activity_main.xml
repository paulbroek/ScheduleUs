<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relative1">

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New event"
        android:id="@+id/NewEventButton"
        android:background="@color/blue"
        android:textSize="30sp"

        android:layout_below="@+id/MyEventsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My events"
        android:id="@+id/MyEventsButton"
        android:textSize="30sp"
        android:background="@color/blue"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/outputView"
        android:layout_alignLeft="@+id/NewEventButton"
        android:layout_alignStart="@+id/NewEventButton" />

</RelativeLayout>
