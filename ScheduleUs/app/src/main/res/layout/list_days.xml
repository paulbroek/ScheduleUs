<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    tools:context=".SelectDaysActivity" >

    <nl.mprog.scheduleus.DrawingShowView
        android:layout_width="70dp"
        android:layout_height="250dp"
        android:id="@+id/child_DrawingShowView"
        android:background="@drawable/back"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/child_dayTextView"
        android:layout_width="wrap_content"
        android:textColor="@color/White"
        android:layout_height="wrap_content"
        android:layout_below="@+id/child_DrawingShowView"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="center_vertical" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/child_delete_day_button"
        android:layout_below="@+id/child_dayTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
